<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="model.Reading" table="Reading">

		<id name="id" type="java.lang.Long" column="id">
			<generator class="native"/>
		</id>

		<property name="reading" column="reading" type="java.lang.Integer"/>

		<property name="atTime" column="atTime" type="java.time.Instant"/>

		<many-to-one name="sensor" column="sensorId" class="model.Sensor" not-null="true"/>
	</class>
</hibernate-mapping>